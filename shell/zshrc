# process on port...
function pop { lsof -n -i4TCP:"$1" | grep LISTEN | awk '{print $2}' }
function kpop { pop "$1" | xargs kill  }

# export -f pop

pkg_verify() {
  if [ $# -ne 1 ]; then
    echo "Missing package to verify."
    return 1
  fi

  spctl -a -v "$1"
  codesign -v --verbose "$1"
}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh



